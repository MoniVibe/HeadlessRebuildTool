{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Anviloop Goal Report v0",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "goal_id",
    "goal_version",
    "goal_status",
    "goal_score",
    "proof",
    "notes",
    "run_refs"
  ],
  "properties": {
    "goal_id": {
      "type": "string",
      "minLength": 1
    },
    "goal_version": {
      "type": "string",
      "minLength": 1
    },
    "goal_status": {
      "type": "string",
      "enum": [
        "PASS",
        "FAIL",
        "UNKNOWN",
        "SKIPPED"
      ]
    },
    "goal_score": {
      "type": "integer",
      "minimum": 0,
      "maximum": 5
    },
    "proof": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    },
    "notes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "run_refs": {
      "type": "object",
      "additionalProperties": true
    }
  }
}
